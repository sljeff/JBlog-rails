    <div id="fAdd1"></div>
    <div id="fAdd2"></div>
    <div id="cat">
        <div class="categoryTitle">分类</div>
        <div class="list">
            <% for cat in @@categories %>
                <%= link_to cat.name, category_path(cat) %>
            <% end %>
        </div>

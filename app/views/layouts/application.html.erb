    <div id="date">
        <% if defined? @dates %>
        <div class="categoryTitle">日期归档</div>
        <div class="list">
            <% for date in @dates %>
                <% link_to date, time_path(date) %>
            <% end %>
        </div>
        <% end %>
    </div>
    <div id="fAdd3"></div>
    <div id="fAdd4"></div>
    <div id="fAdd5"></div>
</div>
